@model Models.ViewModel.RegisterViewModel

@{
    ViewBag.Title = "Register";
   
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Public/css/Account/Register.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com"/>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet"/>
}
<div id="register-form" class="row justify-content-center align-items-center">
    <div class="col-lg-5 col-md-8">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card p-3 rounded-0 shadow">

                <div class="card-body">
                    <div class="card-title h3">Register</div>
                    <hr />
                    <div class="d-flex justify-content-between mb-2">
                        <div class="form-group col-5">
                            <div>Full name</div>
                            @Html.TextBoxFor(m => m.FullName, "", new { @class = "form-control rounded-0", @placeholder = "Full name" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-6">
                            <div>Email</div>
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control rounded-0", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <div class="form-group col-5">
                            <div>Username</div>
                            @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control rounded-0", @placeholder = "Username" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-6">
                            <div>Phone number</div>
                            @Html.TextBoxFor(m => m.PhoneNumber, "", new { @class = "form-control rounded-0", @placeholder = "Phone number" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <div class="form-group col-5">
                            <div>Password</div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-0", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-6">
                            <div>Confirm password</div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control rounded-0", @placeholder = "Confim Password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-2">
                        <div>Address</div>
                        @Html.TextBoxFor(m => m.Address, "", new { @class = "w-100 form-control rounded-0", @placeholder = "Address" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-2">
                        <div>ID Card</div>
                        @Html.TextBoxFor(m => m.IDCard, "", new { @class = "w-100 form-control rounded-0", @placeholder = "Address" })
                        @Html.ValidationMessageFor(m => m.IDCard, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mt-2">
                        <input type="submit" name="submit" class="btn btn-outline-dark rounded-0" value="Register" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>